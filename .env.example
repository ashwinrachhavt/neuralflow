# Postgres connection (local development)
DATABASE_URL="postgresql://neuralflow:neuralflow@localhost:5432/neuralflow?schema=public"
SHADOW_DATABASE_URL="postgresql://neuralflow:neuralflow@localhost:5432/neuralflow?schema=shadow"

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_XXXXXXXXXXXXXXXXXXXX"
CLERK_SECRET_KEY="sk_test_XXXXXXXXXXXXXXXXXXXX"

