# OpenAI
OPENAI_API_KEY="sk-your-openai-key"

# Optional: Supabase (fill once you switch)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Vercel AI SDK (optional overrides)
AI_MODEL="gpt-4.1-mini"

# Local dev auth bypass for cURL testing (DO NOT enable in production)
# When set, middleware allows /api/ai and /api/dao without Clerk cookie,
# and get-or-create-user will create a minimal local user record.
DEV_AUTH_BYPASS="0"
DEV_AUTH_BYPASS_USER_ID="user_dev"
