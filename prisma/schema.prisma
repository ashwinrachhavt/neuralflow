datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id
  email         String?
  name          String?
  image         String?
  energyProfile String?
  goals         String?
  createdAt     DateTime @default(now())

  boards              Board[]
  // Multi-tenant relations
  ownedTenants        Tenant[]
  memberships         Membership[]
  flashcardDecks      FlashcardDeck[]
  flashcardReviews    FlashcardReview[]
  pomodoroSessions    PomodoroSession[]
  focusSessions       FocusSession[]
  calendarEvents      CalendarEvent[]
  quizzes             Quiz[]
  quizAttempts        QuizAttempt[]            @relation("UserToQuizAttempts")
  embeddings          Embedding[]              @relation("UserToEmbeddings")
  stones              UserStone[]
  stoneProgresses     UserStoneProgress[]
  achievements        UserAchievement[]
  dailySnapshots      UserDailySnapshot[]
  gamificationProfile UserGamificationProfile?
  agentRuns           AgentRun[]
  projects            Project[]
  tenants             Tenant[]
  memberships         Membership[]
}

model Board {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  title       String
  description String?
  theme       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  columns Column[]
  tasks   Task[]

  @@index([userId])
}

model Column {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId   String
  name      String
  position  Int
  createdAt DateTime @default(now())

  tasks Task[]

  @@index([boardId])
}

enum TaskStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  DONE
  ARCHIVED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskType {
  DEEP_WORK
  SHALLOW_WORK
  LEARNING
  SHIP
  MAINTENANCE
}

enum ProjectStatus {
  ACTIVE
  HOLD
  PAUSED
  COMPLETED
}

model Task {
  id                     String        @id @default(cuid())
  board                  Board         @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId                String
  column                 Column        @relation(fields: [columnId], references: [id], onDelete: Cascade)
  columnId               String
  title                  String
  descriptionMarkdown    String        @default("")
  priority               TaskPriority  @default(MEDIUM)
  estimateMinutes        Int?
  status                 TaskStatus    @default(TODO)
  estimatedPomodoros     Int?
  completedPomodoros     Int           @default(0)
  tags                   String[]      @default([])
  autoGenerated          Boolean       @default(false)
  enrichedAt             DateTime?
  type                   TaskType?
  storyPoints            Int?
  dueDate                DateTime?
  aiPlanned              Boolean       @default(false)
  fromBrainDump          Boolean       @default(false)
  source                 String?
  // --- AI intelligence fields ---
  aiSuggestedColumnId    String?
  aiSuggestedPriority    TaskPriority?
  aiSuggestedEstimateMin Int?
  aiSubtasks             Json?
  aiNextAction           String?
  aiState                AiState       @default(RAW)
  aiConfidence           Float?
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  doc   Doc?    @relation(fields: [docId], references: [id], onDelete: SetNull)
  docId String?

  note             Note?
  pomodoroSessions PomodoroSession[]
  embeddings       Embedding[]       @relation("TaskToEmbeddings")
  calendarEvents   CalendarEvent[]   @relation("TaskToCalendarEvents")

  @@index([boardId])
  @@index([columnId])
  @@index([status])
  @@index([docId])
}

model Note {
  id              String   @id @default(cuid())
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId          String   @unique
  title           String
  contentJson     String   @default("{}")
  contentMarkdown String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  embeddings     Embedding[]
  flashcardDecks FlashcardDeck[]
  flashcards     Flashcard[]     @relation("NoteToFlashcards")
  quizzes        Quiz[]          @relation("NoteToQuizzes")
}

model PomodoroSession {
  id                 String   @id @default(cuid())
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             String
  task               Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId             String
  startTime          DateTime
  endTime            DateTime
  durationMinutes    Int
  reflectionMarkdown String?
  status             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model FlashcardDeck {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  title        String
  sourceNote   Note?    @relation(fields: [sourceNoteId], references: [id])
  sourceNoteId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cards   Flashcard[]
  quizzes Quiz[]      @relation("DeckToQuizzes")
}

model Flashcard {
  id        String        @id @default(cuid())
  deck      FlashcardDeck @relation(fields: [deckId], references: [id], onDelete: Cascade)
  deckId    String
  note      Note?         @relation("NoteToFlashcards", fields: [noteId], references: [id])
  noteId    String?
  question  String
  answer    String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  reviews FlashcardReview[]
}

model FlashcardReview {
  id           String    @id @default(cuid())
  flashcard    Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)
  flashcardId  String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  reviewedAt   DateTime  @default(now())
  grade        Int
  nextReviewAt DateTime
  intervalDays Int
  easeFactor   Float
  updatedAt    DateTime  @updatedAt
}

model Quiz {
  id           String         @id @default(cuid())
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  title        String
  sourceNote   Note?          @relation("NoteToQuizzes", fields: [sourceNoteId], references: [id])
  sourceNoteId String?
  deck         FlashcardDeck? @relation("DeckToQuizzes", fields: [deckId], references: [id])
  deckId       String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  questions QuizQuestion[]
  attempts  QuizAttempt[]
}

enum QuestionType {
  MCQ
  SHORT_ANSWER
}

model QuizQuestion {
  id             String       @id @default(cuid())
  quiz           Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId         String
  type           QuestionType
  promptMarkdown String
  options        Json?
  correctAnswer  Json?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model QuizAttempt {
  id        String   @id @default(cuid())
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId    String
  user      User     @relation("UserToQuizAttempts", fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  score     Float
  takenAt   DateTime @default(now())
  details   Json?
  updatedAt DateTime @updatedAt
}

model Embedding {
  id        String   @id @default(cuid())
  user      User     @relation("UserToEmbeddings", fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  note      Note?    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  noteId    String?
  task      Task?    @relation("TaskToEmbeddings", fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String?
  chunkText String
  embedding Json
  createdAt DateTime @default(now())
}

enum StoneRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

model StoneDefinition {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String
  imagePath   String
  rarity      StoneRarity
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  earnedStones    UserStone[]
  stoneProgresses UserStoneProgress[]
}

model UserStone {
  id             String          @id @default(cuid())
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  stone          StoneDefinition @relation(fields: [stoneId], references: [id], onDelete: Cascade)
  stoneId        String
  earnedAt       DateTime        @default(now())
  source         String?
  relatedTaskIds String[]        @default([])
  note           String?

  @@index([userId])
  @@index([stoneId])
}

model UserGamificationProfile {
  id                  String    @id @default(cuid())
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String    @unique
  xp                  Int       @default(0)
  level               Int       @default(1)
  longestDailyStreak  Int       @default(0)
  currentDailyStreak  Int       @default(0)
  lastActivityDate    DateTime?
  totalTasksCompleted Int       @default(0)
  totalDeepWorkBlocks Int       @default(0)
  totalPomodoros      Int       @default(0)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model AchievementDefinition {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  icon        String?
  createdAt   DateTime @default(now())

  userAchievements UserAchievement[]
}

model UserAchievement {
  id            String                @id @default(cuid())
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  achievement   AchievementDefinition @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  achievementId String
  earnedAt      DateTime              @default(now())
  metadata      Json?

  @@index([userId])
  @@index([achievementId])
}

model UserDailySnapshot {
  id                    String   @id @default(cuid())
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                String
  date                  DateTime
  tasksCreated          Int      @default(0)
  tasksCompleted        Int      @default(0)
  deepWorkTasks         Int      @default(0)
  shallowTasks          Int      @default(0)
  learningTasks         Int      @default(0)
  pomodoroCount         Int      @default(0)
  focusMinutes          Int      @default(0)
  quizAttempts          Int      @default(0)
  avgQuizScore          Float?
  highPriorityCompleted Int      @default(0)
  deepWorkPomodoros     Int      @default(0)
  reflectionsWritten    Int      @default(0)
  flashcardsReviewed    Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
}

model UserStoneProgress {
  id            String          @id @default(cuid())
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  stone         StoneDefinition @relation(fields: [stoneId], references: [id], onDelete: Cascade)
  stoneId       String
  currentShards Int             @default(0)
  targetShards  Int             @default(10)
  updatedAt     DateTime        @default(now()) @updatedAt

  @@unique([userId, stoneId])
  @@index([userId])
  @@index([stoneId])
}

model AgentOutput {
  id        String   @id @default(cuid())
  run       AgentRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  runId     String
  kind      String
  payload   Json
  createdAt DateTime @default(now())

  @@index([runId])
}

// Logging for AI interactions / agent runs
model AgentRun {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  route     String?
  model     String?
  status    String?
  error     String?
  createdAt DateTime @default(now())

  events  AIEvent[]
  outputs AgentOutput[]

  @@index([userId])
}

model AIEvent {
  id        String   @id @default(cuid())
  run       AgentRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  runId     String
  kind      String
  payload   Json?
  createdAt DateTime @default(now())

  @@index([runId])
}

// Lightweight project entity for organizing tasks and linked notes
model Project {
  id          String        @id @default(cuid())
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  slug        String        @unique @default(cuid())
  title       String
  description String?
  status      ProjectStatus @default(ACTIVE)
  points      Int           @default(0)
  notionUrl   String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  tasks Task[]
  docs  Doc[]
}

model Doc {
  id              String   @id @default(cuid())
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId       String
  slug            String   @unique
  title           String
  summary         String?
  notionUrl       String?
  contentMarkdown String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tasks Task[]

  @@index([projectId])
}

// Calendar and time blocking
enum EventType {
  FOCUS
  MEETING
  PERSONAL
  BREAK
}

model CalendarEvent {
  id                  String    @id @default(cuid())
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String
  title               String
  type                EventType @default(FOCUS)
  startAt             DateTime
  endAt               DateTime
  descriptionMarkdown String?
  tags                String[]  @default([])
  location            String?
  relatedTask         Task?     @relation("TaskToCalendarEvents", fields: [relatedTaskId], references: [id])
  relatedTaskId       String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  focusSessions FocusSession[]

  @@index([userId, startAt])
  @@index([userId, endAt])
}

model FocusSession {
  id            String         @id @default(cuid())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  event         CalendarEvent? @relation(fields: [eventId], references: [id], onDelete: SetNull)
  eventId       String?
  startedAt     DateTime
  endedAt       DateTime?
  completed     Boolean        @default(false)
  interruptions Int            @default(0)
  createdAt     DateTime       @default(now())

  @@index([userId])
  @@index([eventId])
}

// AI state machine for tasks
enum AiState {
  RAW
  CLASSIFIED
  ENRICHED
  SUGGESTED
  COMPLETED
}

// -----------------------------
// Multi-tenant (workspace) core
// -----------------------------

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum MembershipStatus {
  PENDING
  ACTIVE
  SUSPENDED
  REMOVED
}

model Tenant {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
}

model Membership {
  id        String           @id @default(cuid())
  tenant    Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tenantId  String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      TenantRole       @default(MEMBER)
  status    MembershipStatus @default(ACTIVE)
  joinedAt  DateTime         @default(now())
  invitedAt DateTime?

  @@unique([tenantId, userId])
  @@index([userId])
}
